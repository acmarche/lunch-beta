<div class="respond well">
    <div class="title"><h5>Contacter nous</h5></div>

    <div class="form">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            <label for="name" class="col-lg-2 control-label">Nom</label>
            <div class="col-lg-10">
                {{ form_widget(form.nom) }}
            </div>
        </div>

        <div class="form-group">
            <label for="email" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form-group">
            <label for="website" class="col-lg-2 control-label">Site web</label>
            <div class="col-lg-10">
                {{ form_widget(form.website) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-2" for="comment">Commentaire</label>
            <div class="col-lg-10">
                {{ form_widget(form.commentaire) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-danger btn-sm">Envoyer le message</button> &nbsp;
                <!--    <button type="reset" class="btn btn-default btn-sm">Reset</button>-->
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div><!--/ Comment posting end -->
