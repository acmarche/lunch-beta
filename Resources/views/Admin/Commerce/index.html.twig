{% extends '@AcMarcheLunch/Admin/layout.html.twig' %}

{% block body %}

    <div class="page-header">
        <h3>Liste des commerces</h3>
    </div>

    {% if is_granted('ROLE_LUNCH_ADMIN') %}
        <a href="{{ path('aclunch_admin_commerce_new') }}" class="btn btn-primary"
           role="button"><i
                    class="glyphicon glyphicon-plus"></i> Ajouter un commerce</a>
        <br/><br/>
    {% endif %}

    {% if commerces | length > 0 %}
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Commandes</th>
                <th>Produits</th>
                <th>Suppléments</th>
                <th>Ingrédients</th>
            </tr>
            </thead>
            <tbody>
            {% for commerce in commerces %}
                <tr>
                    <td>
                        <a href="{{ path('aclunch_admin_commerce_show', { 'id': commerce.id }) }}">
                            {{ commerce.nom }}
                        </a>
                    </td>
                    <td>{{ commerce.commandes | length }}</td>
                    <td>{{ commerce.produits | length }}</td>
                    <td>{{ commerce.supplements | length }}</td>
                    <td>{{ commerce.ingredients | length }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}

        <p class="text-danger">Aucun commerce associé à votre compte.</p>

    {% endif %}
{% endblock %}
