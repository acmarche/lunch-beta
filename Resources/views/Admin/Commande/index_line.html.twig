{% if commandes | length > 0 %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Commande</th>
            <th>Date</th>
            <th>Payé</th>
            <th>Validé</th>
            <th>Livré</th>
            <th>Utilisateur</th>
            <th>Commerce</th>
            <th>Produits</th>
        </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>
                    {% if commande.isFood %}
                        <a href="{{ path('aclunch_admin_commande_lunch_show', { 'id': commande.id }) }}">
                           {{ commande }}
                        </a>
                    {% else %}
                        <a href="{{ path('aclunch_admin_commande_show', { 'id': commande.id }) }}">
                            {{ commande }}
                        </a>
                    {% endif %}
                </td>
                <td>
                    {{ commande.created | date('d-m-Y H:i ') }}
                </td>
                <td>
                    {% if commande.paye %}
                        Oui
                    {% else %}
                        Non
                    {% endif %}
                </td>
                <td>
                    {% if commande.valide %}
                        Oui
                    {% else %}
                        Non
                    {% endif %}
                </td>
                <td>
                    {% if commande.livre %}
                        Oui
                    {% else %}
                        Non
                    {% endif %}
                </td>
                <td>
                    {{ commande.user }}
                </td>
                <td>
                    {{ commande.commerce }}
                </td>
                <td>
                    {{ commande.commandeProduits | length }}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p class="text-warning">Aucune</p>
{% endif %}

