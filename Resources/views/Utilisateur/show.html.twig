{% extends '@AcMarcheLunch/layout.html.twig' %}

{% block heading %}
    {{ user }}
{% endblock %}

{% block body %}
    <div class="blog">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <!-- The new post done by user's all in the post block -->
                    <div class="blog-post">
                        <!-- Entry is the one post for each user -->
                        <div class="entry">
                            <!-- Post Images -->
                            <div class="blog-img pull-left">

                            </div>
                            <!-- Meta for this block
                            <div class="meta">
                                <i class="fa fa-calendar"></i>&nbsp; Jan 13, 2014
                                <span class="pull-right"><i class="fa fa-comment"></i> <a href="#">&nbsp;2 Comments</a></span>
                            </div>-->
                            <!-- Heading of the  post -->
                            <h3><a href="#">{{ user | upper }}</a></h3>
                            <hr/><!-- Horizontal line -->
                            <!-- Paragraph -->
                            <ul class="list-group-item list-inline">
                                <li class="list-group-item">
                                    <a href="{{ path('aclunch_utilisateur_edit') }}">Editer mes données</a>
                                </li>
                                <li class="list-group-item">
                                    <a href="{{ path('aclunch_utilisateur_edit') }}">Mot de passe</a>
                                </li>
                                {% if is_granted('ROLE_LUNCH_ADMIN') or is_granted('ROLE_LUNCH_COMMERCE') or is_granted('ROLE_LUNCH_LOGISTICIEN') %}
                                    <li class="list-group-item ">
                                        <a href="{{ path('aclunch_admin_home') }}">Administration</a>
                                    </li>
                                {% endif %}
                                <li class="list-group-item pull-right">
                                    <a href="{{ path('fos_user_security_logout') }}">
                                        <span class="fa fa-sign-out"></span> Me déconnecter</a>
                                </li>
                            </ul>
                            <p>

                            </p>
                            <table class="table table-bordered table-responsive">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Email</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>{{ user.nom }}</td>
                                    <td>{{ user.prenom }}</td>
                                    <td>{{ user.email }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <div class="clearfix"></div>
                            {% include '@AcMarcheLunch/Utilisateur/commandes.html.twig' with {'commandes': commandes} %}
                            <div class="clearfix"></div>
                        </div>
                        <!-- Comment section -->
                    </div><!--/ Blog post class end -->
                    <!-- Comment posting -->

                    <!-- Navigation -->

                    <div class="clearfix"></div>
                </div> <!--/ Main blog column end -->
            </div><!--/ Row end -->
        </div>
    </div>

    <!-- Blog End -->
{% endblock %}
