
{% if commandes | length > 0 %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Commande</th>
            <th>Utilisateur</th>
            <th>Commerce</th>
            <th>Produits</th>
        </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>
                        Commande {{ commande.id }}
                </td>
                <td>
                    {{ commande.user }}
                </td>
                <td>
                    {{ commande.commerce }}
                </td>
                <td>
                    {{ commande.commandeProduits | length }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p class="text-warning">Aucune</p>
{% endif %}
