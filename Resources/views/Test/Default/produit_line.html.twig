<table class="table table-bordered">
    <thead>
    <tr>
        <th>Nom</th>
        <th>Prix</th>
        <th>Catégorie</th>
        <th>Commerce</th>
    </tr>
    </thead>
    <tbody>
    {% for produit in produits %}
        <tr>
            <td>
                {{ produit.nom }}
            </td>
            <td>{{ produit.prixHtva }} €</td>
            <td>{{ produit.categorie }}</td>
            <td>
                {{ produit.commerce }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>