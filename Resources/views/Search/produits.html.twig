<div class="page-header">
    <h3>Produits trouvés</h3>
</div>

{% if produits | length > 0 %}
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Nom</th>
        <th>Catégorie</th>
        <th>Commerce</th>
    </tr>
    </thead>
    <tbody>
    {% for produit in produits %}
        <tr>
            <td>
                <a href="{{ path('aclunch_produit_show', { 'id': produit.id }) }}">{{ produit.nom }}</a>
            </td>
            <td>{{ produit.categorie }}</td>
            <td>
                <a href="{{ path('aclunch_commerce_show', { 'id': produit.commerce.id }) }}">
                    {{ produit.commerce }}
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}

    <p class="text-warning">Aucun produit trouvé.</p>

{% endif %}
