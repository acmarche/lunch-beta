<div class="page-header">
    <h3>Commerces trouvés</h3>
</div>

{% if commerces | length > 0 %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Produits</th>
        </tr>
        </thead>
        <tbody>
        {% for commerce in commerces %}
            <tr>
                <td>
                    <a href="{{ path('aclunch_commerce_show', { 'id': commerce.id }) }}">
                        {{ commerce.nom }}
                    </a>
                </td>
                <td>{{ commerce.produits | length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}

    <p class="text-warning">Aucun commerce trouvé.</p>

{% endif %}